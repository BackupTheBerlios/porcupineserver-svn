<?xml version="1.0" encoding="utf-8"?>
<a:rect xmlns:a="http://www.innoscript.org/quix" width="100%" height="100%" overflow="auto" padding="8,8,8,8">
	<a:label caption="Timers" style="font-weight:bolder;font-size:10pt"></a:label>
	<a:label top="25" caption="Interval timer:" />
	<a:timer interval="1000"
			top="27"
			left="80"
			width="46"
			handler="quixsampler.displayTime"
			auto="true" />
	<a:label top="55" caption="Timeout timer (will fire in 5 secs):" />
	<a:timer timeout="5000"
			top="57"
			left="170"
			width="46"
			handler="quixsampler.fireTimer"
			auto="true" />
</a:rect>